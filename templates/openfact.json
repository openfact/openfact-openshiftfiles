{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "annotations": {
      "description": "Application template for Openfact 1.0.0.Final",
      "iconClass": "icon-wildfly",
      "tags": "openfact,keycloak,java,wildfly,jboss",
      "version": "1.0.0",
      "openshift.io/display-name": "Openfact 1.0.0.Final + Keycloak"
    },
    "name": "openfact-keycloak"
  },
  "labels": {
    "template": "openfact-keycloak"
  },
  "message": "A new Keycloak service has been created in your project.\n\n Keycloak Server (Master Realm)\n--------------------\n- Username: ${KEYCLOAK_USER}\n- Password: ${KEYCLOAK_PASSWORD}\n\nOpenfact Server\n--------------------\n- All configuration has been changed.",
  "parameters": [
    {
      "displayName": "Application Name",
      "description": "The name for the application.",
      "name": "APPLICATION_NAME",
      "value": "openfact-cluster",
      "required": true
    },
    {
      "displayName": "ImageStream Namespace",
      "description": "Namespace in which the ImageStreams for Red Hat Middleware images are installed. These ImageStreams are normally installed in the openshift namespace. You should only need to modify this if you've installed the ImageStreams in a different namespace/project.",
      "name": "IMAGE_STREAM_NAMESPACE",
      "value": "openshift",
      "required": true
    },
    {
      "displayName": "Openfact Custom http Route Hostname",
      "description": "Custom hostname for http service route.  Leave blank for default hostname, e.g.: <application-name>.<project>.<default-domain-suffix>",
      "name": "OPENFACT_HOSTNAME_HTTP",
      "value": "",
      "required": false
    },
    {
      "displayName": "Openfact Datasource Minimum Pool Size",
      "description": "Sets xa-pool/min-pool-size for the configured datasource.",
      "name": "OPENFACT_DB_MIN_POOL_SIZE",
      "required": false
    },
    {
      "displayName": "Openfact Datasource Maximum Pool Size",
      "description": "Sets xa-pool/max-pool-size for the configured datasource.",
      "name": "OPENFACT_DB_MAX_POOL_SIZE",
      "required": false
    },
    {
      "displayName": "Openfact Datasource Transaction Isolation",
      "description": "Sets transaction-isolation for the configured datasource.",
      "name": "OPENFACT_DB_TX_ISOLATION",
      "required": false
    },
    {
      "displayName": "Openfact Datasource Pool Flush Strategy",
      "description": "Sets flush-strategy for the configured datasource.",
      "name": "OPENFACT_DB_POOL_FLUSH_STRATEGY",
      "required": false
    },
    {
      "displayName": "Keycloak Admin Username",
      "description": "Keycloak Server admin username",
      "name": "KEYCLOAK_USER",
      "from": "[a-zA-Z0-9]{8}",
      "generate": "expression",
      "required": true
    },
    {
      "displayName": "Keycloak Admin Password",
      "description": "Keycloak Server admin  password",
      "name": "KEYCLOAK_PASSWORD",
      "from": "[a-zA-Z0-9]{8}",
      "generate": "expression",
      "required": true
    },
    {
      "displayName": "Keycloak Custom http Route Hostname",
      "description": "Custom hostname for http service route. Leave blank for default hostname, e.g.: <application-name>.<project>.<default-domain-suffix>",
      "name": "KEYCLOAK_HOSTNAME_HTTP",
      "value": "",
      "required": false
    },
    {
      "displayName": "Keycloak Datasource Minimum Pool Size",
      "description": "Sets xa-pool/min-pool-size for the configured datasource.",
      "name": "KEYCLOAK_DB_MIN_POOL_SIZE",
      "required": false
    },
    {
      "displayName": "Keycloak Datasource Maximum Pool Size",
      "description": "Sets xa-pool/max-pool-size for the configured datasource.",
      "name": "KEYCLOAK_DB_MAX_POOL_SIZE",
      "required": false
    },
    {
      "displayName": "Keycloak Datasource Transaction Isolation",
      "description": "Sets transaction-isolation for the configured datasource.",
      "name": "KEYCLOAK_DB_TX_ISOLATION",
      "required": false
    },
    {
      "displayName": "Keycloak Datasource Pool Flush Strategy",
      "description": "Sets flush-strategy for the configured datasource.",
      "name": "KEYCLOAK_DB_POOL_FLUSH_STRATEGY",
      "required": false
    }
  ],
  "objects": [
    {
      "kind": "Service",
      "apiVersion": "v1",
      "spec": {
        "ports": [
          {
            "port": 8080,
            "targetPort": 8080
          }
        ],
        "selector": {
          "deploymentConfig": "openfact"
        }
      },
      "metadata": {
        "name": "openfact",
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "annotations": {
          "description": "The web server's http port.",
          "service.alpha.openshift.io/dependencies": "[{\"name\": \"openfact-postgresql\", \"kind\": \"Service\"}]"
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "spec": {
        "ports": [
          {
            "port": 8080,
            "targetPort": 8080
          }
        ],
        "selector": {
          "deploymentConfig": "keycloak"
        }
      },
      "metadata": {
        "name": "keycloak",
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "annotations": {
          "description": "The web server's http port.",
          "service.alpha.openshift.io/dependencies": "[{\"name\": \"keycloak-mysql\", \"kind\": \"Service\"}]"
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "spec": {
        "ports": [
          {
            "port": 3306,
            "targetPort": 3306
          }
        ],
        "selector": {
          "deploymentConfig": "keycloak-mysql"
        }
      },
      "metadata": {
        "name": "keycloak-mysql",
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "annotations": {
          "description": "The database server's port."
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "spec": {
        "ports": [
          {
            "port": 5432,
            "targetPort": 5432
          }
        ],
        "selector": {
          "deploymentConfig": "openfact-postgresql"
        }
      },
      "metadata": {
        "name": "openfact-postgresql",
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "annotations": {
          "description": "The database server's port."
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "id": "keycloak-http",
      "metadata": {
        "name": "keycloak",
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "annotations": {
          "description": "Route for application's http service."
        }
      },
      "spec": {
        "host": "${KEYCLOAK_HOSTNAME_HTTP}",
        "to": {
          "name": "keycloak"
        }
      }
    },
    {
      "kind": "Route",
      "apiVersion": "v1",
      "id": "openfact-http",
      "metadata": {
        "name": "openfact",
        "labels": {
          "application": "${APPLICATION_NAME}"
        },
        "annotations": {
          "description": "Route for application's http service."
        }
      },
      "spec": {
        "host": "${OPENFACT_HOSTNAME_HTTP}",
        "to": {
          "name": "openfact"
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "keycloak",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate"
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "keycloak"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "${IMAGE_STREAM_NAMESPACE}",
                "name": "keycloak:latest"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "deploymentConfig": "keycloak"
        },
        "template": {
          "metadata": {
            "name": "keycloak",
            "labels": {
              "deploymentConfig": "keycloak",
              "application": "${APPLICATION_NAME}"
            }
          },
          "spec": {
            "terminationGracePeriodSeconds": 75,
            "containers": [
              {
                "name": "keycloak",
                "image": "openfact/keycloak-mysql",
                "imagePullPolicy": "Always",
                "lifecycle": {
                  "preStop": {
                    "exec": {
                      "command": [
                        "/opt/jboss/keycloak/bin/jboss-cli.sh",
                        "-c",
                        ":shutdown(timeout=60)"
                      ]
                    }
                  }
                },
                "ports": [
                  {
                    "name": "http",
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "DB_ADDR",
                    "value": "keycloak-mysql"
                  },
                  {
                    "name": "DB_USERNAME",
                    "value": "${KEYCLOAK_DB_USERNAME}"
                  },
                  {
                    "name": "DB_PASSWORD",
                    "value": "${KEYCLOAK_DB_PASSWORD}"
                  },
                  {
                    "name": "DB_DATABASE",
                    "value": "${KEYCLOAK_DB_DATABASE}"
                  },
                  {
                    "name": "DB_MIN_POOL_SIZE",
                    "value": "${KEYCLOAK_DB_MIN_POOL_SIZE}"
                  },
                  {
                    "name": "DB_MAX_POOL_SIZE",
                    "value": "${KEYCLOAK_DB_MAX_POOL_SIZE}"
                  },
                  {
                    "name": "DB_TX_ISOLATION",
                    "value": "${KEYCLOAK_DB_TX_ISOLATION}"
                  },
                  {
                    "name": "DB_POOL_FLUSH_STRATEGY",
                    "value": "${KEYCLOAK_DB_POOL_FLUSH_STRATEGY}"
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "openfact",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate"
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "openfact"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "${IMAGE_STREAM_NAMESPACE}",
                "name": "openfact:latest"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "deploymentConfig": "openfact"
        },
        "template": {
          "metadata": {
            "name": "openfact",
            "labels": {
              "deploymentConfig": "openfact",
              "application": "${APPLICATION_NAME}"
            }
          },
          "spec": {
            "terminationGracePeriodSeconds": 75,
            "containers": [
              {
                "name": "openfact",
                "image": "openfact/openfact-postgres",
                "imagePullPolicy": "Always",
                "lifecycle": {
                  "preStop": {
                    "exec": {
                      "command": [
                        "/opt/jboss/wildfly/bin/jboss-cli.sh",
                        "-c",
                        ":shutdown(timeout=60)"
                      ]
                    }
                  }
                },
                "ports": [
                  {
                    "name": "http",
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "DB_ADDR",
                    "value": "openfact-postgres"
                  },
                  {
                    "name": "DB_USERNAME",
                    "value": "${OPENFACT_DB_USERNAME}"
                  },
                  {
                    "name": "DB_PASSWORD",
                    "value": "${OPENFACT_DB_PASSWORD}"
                  },
                  {
                    "name": "DB_DATABASE",
                    "value": "${OPENFACT_DB_DATABASE}"
                  },
                  {
                    "name": "DB_MIN_POOL_SIZE",
                    "value": "${OPENFACT_DB_MIN_POOL_SIZE}"
                  },
                  {
                    "name": "DB_MAX_POOL_SIZE",
                    "value": "${OPENFACT_DB_MAX_POOL_SIZE}"
                  },
                  {
                    "name": "DB_TX_ISOLATION",
                    "value": "${OPENFACT_DB_TX_ISOLATION}"
                  },
                  {
                    "name": "DB_POOL_FLUSH_STRATEGY",
                    "value": "${OPENFACT_DB_POOL_FLUSH_STRATEGY}"
                  }
                ]
              }
            ]
          }
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "keycloak-mysql",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate"
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "keycloak-mysql"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "${IMAGE_STREAM_NAMESPACE}",
                "name": "mysql:latest"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "deploymentConfig": "keycloak-mysql"
        },
        "template": {
          "metadata": {
            "name": "keycloak-mysql",
            "labels": {
              "deploymentConfig": "keycloak-mysql",
              "application": "${APPLICATION_NAME}"
            }
          },
          "spec": {
            "terminationGracePeriodSeconds": 60,
            "containers": [
              {
                "name": "keycloak-mysql",
                "image": "mysql",
                "imagePullPolicy": "Always",
                "ports": [
                  {
                    "containerPort": 3306,
                    "protocol": "TCP"
                  }
                ],
                "volumeMounts": [
                  {
                    "mountPath": "/var/lib/mysql/data",
                    "name": "keycloak-mysql-pvol"
                  }
                ],
                "env": [
                  {
                    "name": "MYSQL_USER",
                    "value": "${KEYCLOAK_DB_USERNAME}"
                  },
                  {
                    "name": "MYSQL_PASSWORD",
                    "value": "${KEYCLOAK_DB_PASSWORD}"
                  },
                  {
                    "name": "MYSQL_DATABASE",
                    "value": "${KEYCLOAK_DB_DATABASE}"
                  },
                  {
                    "name": "MYSQL_LOWER_CASE_TABLE_NAMES",
                    "value": "${KEYCLOAK_MYSQL_LOWER_CASE_TABLE_NAMES}"
                  },
                  {
                    "name": "MYSQL_MAX_CONNECTIONS",
                    "value": "${KEYCLOAK_MYSQL_MAX_CONNECTIONS}"
                  },
                  {
                    "name": "MYSQL_FT_MIN_WORD_LEN",
                    "value": "${KEYCLOAK_MYSQL_FT_MIN_WORD_LEN}"
                  },
                  {
                    "name": "MYSQL_FT_MAX_WORD_LEN",
                    "value": "${KEYCLOAK_MYSQL_FT_MAX_WORD_LEN}"
                  },
                  {
                    "name": "MYSQL_AIO",
                    "value": "${KEYCLOAK_MYSQL_AIO}"
                  }
                ]
              }
            ],
            "volumes": [
              {
                "name": "keycloak-mysql-pvol",
                "persistentVolumeClaim": {
                  "claimName": "keycloak-mysql-claim"
                }
              }
            ]
          }
        }
      }
    },
    {
      "kind": "DeploymentConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "openfact-postgresql",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "strategy": {
          "type": "Recreate"
        },
        "triggers": [
          {
            "type": "ImageChange",
            "imageChangeParams": {
              "automatic": true,
              "containerNames": [
                "openfact-postgresql"
              ],
              "from": {
                "kind": "ImageStreamTag",
                "namespace": "${IMAGE_STREAM_NAMESPACE}",
                "name": "postgresql:latest"
              }
            }
          },
          {
            "type": "ConfigChange"
          }
        ],
        "replicas": 1,
        "selector": {
          "deploymentConfig": "openfact-postgresql"
        },
        "template": {
          "metadata": {
            "name": "openfact-postgresql",
            "labels": {
              "deploymentConfig": "openfact-postgresql",
              "application": "${APPLICATION_NAME}"
            }
          },
          "spec": {
            "terminationGracePeriodSeconds": 60,
            "containers": [
              {
                "name": "openfact-postgresql",
                "image": "postgresql",
                "imagePullPolicy": "Always",
                "ports": [
                  {
                    "containerPort": 5432,
                    "protocol": "TCP"
                  }
                ],
                "volumeMounts": [
                  {
                    "mountPath": "/var/lib/pgsql/data",
                    "name": "openfact-postgresql-pvol"
                  }
                ],
                "env": [
                  {
                    "name": "POSTGRESQL_USER",
                    "value": "${OPENFACT_DB_USERNAME}"
                  },
                  {
                    "name": "POSTGRESQL_PASSWORD",
                    "value": "${OPENFACT_DB_PASSWORD}"
                  },
                  {
                    "name": "POSTGRESQL_DATABASE",
                    "value": "${OPENFACT_DB_DATABASE}"
                  },
                  {
                    "name": "POSTGRESQL_MAX_CONNECTIONS",
                    "value": "${OPENFACT_POSTGRESQL_MAX_CONNECTIONS}"
                  },
                  {
                    "name": "POSTGRESQL_MAX_PREPARED_TRANSACTIONS",
                    "value": "${OPENFACT_POSTGRESQL_MAX_CONNECTIONS}"
                  },
                  {
                    "name": "POSTGRESQL_SHARED_BUFFERS",
                    "value": "${OPENFACT_POSTGRESQL_SHARED_BUFFERS}"
                  }
                ]
              }
            ],
            "volumes": [
              {
                "name": "openfact-postgresql-pvol",
                "persistentVolumeClaim": {
                  "claimName": "openfact-postgresql-claim"
                }
              }
            ]
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "metadata": {
        "name": "keycloak-mysql-claim",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "accessModes": [
          "ReadWriteOnce"
        ],
        "resources": {
          "requests": {
            "storage": "${KEYCLOAK_VOLUME_CAPACITY}"
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "PersistentVolumeClaim",
      "metadata": {
        "name": "openfact-postgresql-claim",
        "labels": {
          "application": "${APPLICATION_NAME}"
        }
      },
      "spec": {
        "accessModes": [
          "ReadWriteOnce"
        ],
        "resources": {
          "requests": {
            "storage": "${OPENFACT_VOLUME_CAPACITY}"
          }
        }
      }
    }
  ]
}